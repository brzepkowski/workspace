	}
	
	public int drawDealer(int min, int max) {
	    Random rand = new Random();

	    // nextInt is normally exclusive of the top value,
	    // so add 1 to make it inclusive
	    int randomDealer = rand.nextInt((max - min) + 1) + min;

	    return randomDealer;
	}
	
	

}
